<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dss.juser.mapper.LoginMapper">
    <select id="queryUserInfoByNameAndPassword" parameterType="com.dss.juser.pojo.param.LoginParam"
            resultType="com.dss.juser.pojo.domain.UserInfoDO">
        SELECT
            u.name, u.icon
        FROM
            user AS u
        WHERE
            u.name = #{name}
        AND
            u.pwd = #{password}
    </select>
</mapper>